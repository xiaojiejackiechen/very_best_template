<div class="card mb-3">
  <h2 class="card-header h4">
    Bookmark #<%= bookmark.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Dish</dt>
      <dd>
        <% if @bookmark.dish.present? %>
          <%= link_to bookmark.dish, bookmark.dish %>
        <% end %>
      </dd>

      <dt>Venue</dt>
      <dd>
        <% if @bookmark.venue.present? %>
          <%= link_to bookmark.venue, bookmark.venue %>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @bookmark.user.present? %>
          <%= link_to bookmark.user, bookmark.user %>
        <% end %>
      </dd>

      <dt>Notes</dt>
      <dd><%= bookmark.notes %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @bookmark.image, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back bookmark, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @bookmark.user %>
          <%= link_to edit_bookmark_url(bookmark), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @bookmark.user %>
          <%= link_to bookmark, method: :delete, data: { confirm: "Do you really want to delete this bookmark?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(bookmark.updated_at) %> ago
  </div>
</div>
